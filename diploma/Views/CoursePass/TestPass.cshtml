@using diploma.Models
@model Lesson

<div class="row" style="margin-top:5vh">
        <h1>Тест: @Model.Name</h1>      
</div>

<div class="row" id="menu">
    <div class=" col-md-2" style="height:100vh">
        <ul class="nav nav-pills nav-stacked">
            @for (int i = 0; i < Model.Question.Count; i++)
            {
                <li>

                    @Ajax.ActionLink("Вопрос " + (i + 1).ToString(), "Question", new { QuestionCount = i, LessonId = Model.Id, Date = @ViewBag.date }, new AjaxOptions { UpdateTargetId = "Question" })
                </li>

            }

        </ul>
    </div>
    <div id="Question" class="col-md-10">
    </div>
</div>
