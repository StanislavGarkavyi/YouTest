@using diploma.Models 
@model List<UserCourses>
    <table class="table table-striped">
        <tr>
            <td colspan="4" align="center">Не подтвержденные заяки</td>
        </tr>
        <tr>
            <td>Курс</td>
            <td>Пользователь</td>
            <td>Стоимость</td>  
            <td></td>
        </tr>
        @if (Model.Count == 0) 
        {
            <tr><td colspan="4" align="center"><b>Нет заявок</b></td></tr>
        }
        @foreach (var item in Model) 
        {
            <tr>
                <td>@item.Course.Name</td>
                <td>@item.User.UserName</td>
                <td>@item.Course.Price</td>
                <td><button type="button" class="btn btn-default">Подтвердить</button></td>
            </tr>
        }
        
    </table>

