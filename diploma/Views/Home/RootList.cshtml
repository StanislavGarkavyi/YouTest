@using diploma.Models
@model List<string>
@if (ViewBag.tr1 == "Пользователь")
{
    <table class="table">
        <thead>
            <tr>
                <th class="col-md-3"> @ViewBag.tr1</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr><td>Ничего не найдено!</td></tr>}
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item, "UserResultRedirect", new { user = item, CourseId=ViewBag.CID } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th class="col-md-3"> @ViewBag.tr1</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr><td>Ничего не найдено!</td></tr>}
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item</td>
                </tr>
            }
        </tbody>
    </table>
}


