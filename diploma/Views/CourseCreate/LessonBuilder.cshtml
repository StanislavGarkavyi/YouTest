

@using (Ajax.BeginForm("LessonListBuilder", new AjaxOptions { UpdateTargetId = "lessons" }))
{
<div id="builder">
    <div id="course-name">
        @ViewBag.course
    </div>
    <input type="hidden" value="@ViewBag.couseid" id="couseid" name="couseid"/>
    <div id="lesson-number">
        Введите Количество Уроков
    </div>
    
        <div id="input" class="input-group col-md-3">
            <input type="number" class="form-control" name="number">
            <span class="input-group-btn">
                <input type="submit" class="btn btn-default" value="Поехали" onclick="sub()" />
            </span>
        </div>
    
</div>
}
<div id="lessons"></div>
<style>
    #builder
    {
        height:60vh; margin-top:20%
    }
    #course-name {
        font-size:10vh; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; text-align:center; 
    }
    #lesson-number {
        font-size: 3vh;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        text-align: center;
    }
    .input-group{margin-left:37.5%; margin-top:2vh;}
    input[type=text] {
        border: 0px solid white;
    }
</style>
<script>
    function sub() {
        document.getElementById("builder").style.marginTop = "1%";
        document.getElementById("builder").style.height = "auto";
        document.getElementById("course-name").style.fontSize = "4vh";
        document.getElementById("course-name").style.textAlign = "Left";
        document.getElementById("lesson-number").style.display = 'none';
        document.getElementById("input").style.display = 'none';
    }
</script>